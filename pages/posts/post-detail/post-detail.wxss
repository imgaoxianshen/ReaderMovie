.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  height: 460rpx;
  width: 100%;
}

.audio {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  left: 50%;
  margin-left: -50rpx;
  top: 180rpx;
  opacity: 0.5;
}

.author-data {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatar {
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
  border-radius: 50%;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.date {
  font-size: 24rpx;
  color: #999;
  margin-left: 30rpx;
  vertical-align: middle;
}

.title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool {
  margin-top: 20rpx;
}

.circle-img {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.icon-img {
  width: 50rpx;
  height: 50rpx;
  background-color: #e5e5e5;
  border-radius: 50%;
}

.share-img {
  margin-left: 20rpx;
}

.horizn {
  vertical-align: middle;
  width: 95%;
  margin: 0 auto;
  height: 1px;
  background-color: #e5e5e5;
  position: relative;
  top: 25rpx;
  z-index: -99;
}

.detail {
  color: #666;
  margin: 20rpx 30rpx 0 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}
